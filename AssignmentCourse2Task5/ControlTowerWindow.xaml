<Window x:Class="AssignmentCourse2Task5.ControlTowerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssignmentCourse2Task5"
        mc:Ignorable="d"
        Title="Control Tower Program" Height="396.271" Width="629.407" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblFlightTower" Content="Flight Tower" HorizontalAlignment="Left" Height="37" Margin="30,10,0,0" VerticalAlignment="Top" Width="151" FontFamily="Times New Roman" FontSize="24"/>
        <Label x:Name="lblFlightCode" Content="Flight Code" HorizontalAlignment="Left" Margin="46,73,0,0" VerticalAlignment="Top" Width="104" FontFamily="Times New Roman" FontSize="18"/>
        <Label x:Name="liblStatus" Content="Status" HorizontalAlignment="Left" Margin="240,73,0,0" VerticalAlignment="Top" Width="101" FontFamily="Times New Roman" FontSize="18"/>
