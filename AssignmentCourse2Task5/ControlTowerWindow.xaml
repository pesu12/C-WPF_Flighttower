        <ListBox x:Name="lstFlights" HorizontalAlignment="Left" Height="188" Margin="46,109,0,0" VerticalAlignment="Top" Width="530" FontFamily="Times New Roman" FontSize="18"/>
        <Label x:Name="lblNextFlight" Content="Next Flight:" HorizontalAlignment="Left" Margin="46,315,0,0" VerticalAlignment="Top" Width="104" FontFamily="Times New Roman" FontSize="18"/>
